<div>
  <h1>Editing Planet</h1>
</div>

<div>
  <%= simple_form_for [@planet] do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Edit this planet !", class: "btn btn-primary" %>
  <% end %>
</div>

<%= link_to 'Show', @planet %> |
<%= link_to 'Back', planets_path %>
